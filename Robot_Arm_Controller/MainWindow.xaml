                    <TextBox x:Name="TbZ" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Width="52" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" TextBlock.FontFamily="Bahnschrift SemiBold" Margin="235,43,0,0"/>
                    <Button Style="{DynamicResource CurvedButton}" x:Name="inverseStart" Content="Pozisyona Git" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Width="257" Height="35" Click="StartInverseKinematics" FontWeight="Bold" Foreground="White" Background="#FF008CC8" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <Label Content="TERS KİNEMATİK" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold" TextBlock.FontFamily="Bahnschrift SemiBold" Background="{x:Null}" Margin="10,11,0,0"/>

                </Grid>
                <Border Grid.Row="3" Background="#2F2F2F" CornerRadius="20" Margin="0,23,0,30" />
                <Grid Grid.Row="3">
                    <Slider x:Name="jointSelector" Value="{Binding Value}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="162"  Maximum="6" Minimum="0" TickFrequency="0.1" Height="22" Background="Transparent" BorderBrush="Transparent" Foreground="#FFE5E5E5" ValueChanged="jointSelector_ValueChanged" SmallChange="1" IsSnapToTickEnabled="True" Margin="85,45,0,0"/>
                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=jointSelector, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="53" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" TextBlock.FontFamily="Bahnschrift SemiBold" Margin="254,45,0,0"/>
                    <Label Content="Eklem No" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0" Margin="10,41,0,0" TextBlock.FontFamily="Bahnschrift SemiBold"/>

                    <Label Content="X" HorizontalAlignment="Left" Margin="50,76,0,0" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="jointXAxis" Content="" HorizontalAlignment="Left" Margin="80,85,0,0" VerticalAlignment="Top" Checked="CheckBox_StateChanged" Unchecked="CheckBox_StateChanged"/>
                    <Label Content="Y" HorizontalAlignment="Left" Margin="126,76,0,0" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="jointYAxis" Content="" HorizontalAlignment="Left" Margin="156,85,0,0" VerticalAlignment="Top" Checked="CheckBox_StateChanged" Unchecked="CheckBox_StateChanged"/>
                    <Label Content="Z" HorizontalAlignment="Left" Margin="204,76,0,0" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="jointZAxis" Content="" HorizontalAlignment="Left" Margin="234,85,0,0" VerticalAlignment="Top" Checked="CheckBox_StateChanged" Unchecked="CheckBox_StateChanged"/>

                    <Slider x:Name="jointX" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Width="207"  Maximum="3000" ValueChanged="rotationPointChanged" Height="22" SmallChange="1" IsSnapToTickEnabled="True" Minimum="-3000"/>
                    <Label Content="X" Width="29" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" TextBlock.FontFamily="Bahnschrift SemiBold" HorizontalAlignment="Left" Margin="14,0,0,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="jointXValue" Margin="257,113,1,117" Content="{Binding Value, ElementName=jointX}" Foreground="White" FontSize="12" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextBlock.FontFamily="Bahnschrift SemiBold" RenderTransformOrigin="0.435,0.634"/>

                    <Slider x:Name="jointY" HorizontalAlignment="Left" Margin="50,152,0,0" VerticalAlignment="Top" Width="207"  Maximum="3000" ValueChanged="rotationPointChanged" Height="22" SmallChange="1" IsSnapToTickEnabled="True" Minimum="-3000"/>
                    <Label Content="Y" HorizontalAlignment="Left" Margin="14,148,0,0" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" TextBlock.FontFamily="Bahnschrift SemiBold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="jointYValue" Margin="256,148,1,80"  Content="{Binding Value, ElementName=jointY}" Foreground="White" FontSize="12" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextBlock.FontFamily="Bahnschrift SemiBold"/>

                    <Slider x:Name="jointZ" HorizontalAlignment="Left" Margin="50,187,0,0" VerticalAlignment="Top" Width="207"  Maximum="3000" ValueChanged="rotationPointChanged" Height="22" SmallChange="1" IsSnapToTickEnabled="True" Minimum="-3000"/>
                    <Label Content="Z" HorizontalAlignment="Left" Margin="14,183,0,0" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" TextBlock.FontFamily="Bahnschrift SemiBold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="jointZValue" Margin="256,183,1,51" Content="{Binding Value, ElementName=jointZ}" Height="22" Foreground="White" FontSize="12" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextBlock.FontFamily="Bahnschrift SemiBold"/>

                </Grid>
            </Grid>

            <!-- ORTA PANEL -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="77*"/>
                    <RowDefinition Height="659*"/>
                    <RowDefinition Height="128*"/>
                </Grid.RowDefinitions>

                <!-- Durum Paneli -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110*"/>
                        <ColumnDefinition Width="61*"/>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="99*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#2F2F2F" CornerRadius="20" Margin="-10,0,2,-10" />
                    <Grid Grid.Column="0" Margin="0,0,2,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="28*"/>
                            <RowDefinition Height="28*"/>
                        </Grid.RowDefinitions>
                        <Label Content="ROBOT KOLUN ANLIK AÇILARI" HorizontalAlignment="Center" VerticalAlignment="Top"  Foreground="White" FontSize="12" FontWeight="Bold" Width="200" Height="23" FontFamily="Bahnschrift SemiBold" Grid.RowSpan="2"/>
                        <Grid Grid.Row="1" Margin="0,3,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="J1:" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="12" FontWeight="Bold" Width="30" Grid.Column="0" FontFamily="Bahnschrift SemiBold"/>
                            <Label Content="J2:" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="12" FontWeight="Bold" Width="30" Grid.Column="1" FontFamily="Bahnschrift SemiBold"/>
