                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=joint1, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" Grid.Column="2" Grid.Row="1" TextBlock.FontFamily="Bahnschrift SemiBold"/>
