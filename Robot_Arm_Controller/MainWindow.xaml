                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=joint3, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" Grid.Column="2" Grid.Row="3" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=joint4, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" Grid.Column="2" Grid.Row="4" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=joint5, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" Grid.Column="2" Grid.Row="5" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <TextBox Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Value, ElementName=joint6, Mode=TwoWay, StringFormat=\{0:F\}}" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" Grid.Column="2" Grid.Row="6" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <!-- Buton -->
                    <Button Style="{DynamicResource CurvedButton}" x:Name="joint1Btn" Content="Pozisyon Kaydet" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="105" Height="35" Grid.Column="1" Grid.Row="7" Click="jointBtn_Click" FontWeight="Bold" Foreground="White" Background="#FF008CC8" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <Button Style="{DynamicResource CurvedButton}" x:Name="joint2Btn" Content="Pozisyon Ayarla" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="105" Height="35" Grid.Column="1" Grid.Row="7" Click="jointBtn_Click" FontWeight="Bold" Foreground="White" Background="#FF008CC8" TextBlock.FontFamily="Bahnschrift SemiBold"/>

                </Grid>
                <Border Grid.Row="2" Background="#2F2F2F" CornerRadius="20" Margin="0,23,0,52" />
                <Grid Grid.Row="2" Margin="0,23,0,0" Grid.RowSpan="2">
                    <Label Content="X" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0" Margin="3,36,0,0" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <TextBox x:Name="TbX" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Width="52" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" TextBlock.FontFamily="Bahnschrift SemiBold" Margin="33,43,0,0"/>
                    <Label Content="Y" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Foreground="White" FontSize="14" FontWeight="Bold" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0" Margin="106,36,0,0" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <TextBox x:Name="TbY" Style="{DynamicResource TextBoxStyle1}" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Top" Width="52" Background="{x:Null}" Foreground="#FFD4D4D4" FontWeight="Bold" BorderBrush="#FFA4A4A4" BorderThickness="1,1,1,1" TextBlock.FontFamily="Bahnschrift SemiBold" Margin="136,43,0,0"/>
