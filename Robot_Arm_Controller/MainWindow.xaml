                    <TextBlock Text="COM Port:" HorizontalAlignment="Left" Margin="25,22,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontWeight="Bold" RenderTransformOrigin="0.876,0.707" FontFamily="Bahnschrift SemiBold" />
                    <!--<Label Content="COM PORT:" HorizontalAlignment="Left" Margin="10,24,0,80" Foreground="White" FontSize="20" FontWeight="Bold" />-->
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="118,20,0,0" VerticalAlignment="Top" Width="142" Height="26" FontSize="16" FontWeight="Bold" Background="#FF525151" Foreground="Black" IsEditable="True" />
                    <Button Style="{DynamicResource CurvedButton}" x:Name="baglanBtn"  Content="Bağlan" HorizontalAlignment="Left" Margin="25,64,0,0" VerticalAlignment="Top" Width="118" Height="36" FontSize="16" FontWeight="Bold" Click="button_Click" Background="#FF45C63A" Foreground="White" BorderThickness="0,0,2,2" BorderBrush="#FF252525" TextBlock.FontFamily="Bahnschrift SemiBold"/>
                    <Button Style="{DynamicResource CurvedButton}" x:Name="baglantiKesBtn" Content="Bağlantı Kes" HorizontalAlignment="Left" Margin="158,64,0,0" VerticalAlignment="Top" Width="118" Height="36" FontSize="16" FontWeight="Bold" Click="button_Click" Background="#FFC6423A" Foreground="White" TextBlock.FontFamily="Bahnschrift SemiBold"/>
