                    <Slider x:Name="joint3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Maximum="100" Minimum="-100" ValueChanged="joint_ValueChanged" LargeChange="0.1" TickFrequency="0.1" Height="22" Grid.Column="1" Grid.Row="3"/>
                    <Slider x:Name="joint4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Maximum="120" Minimum="-120" ValueChanged="joint_ValueChanged" LargeChange="0.1" TickFrequency="0.1" Height="22" Grid.Column="1" Grid.Row="4"/>
                    <Slider x:Name="joint5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Maximum="90" Minimum="-90" ValueChanged="joint_ValueChanged" LargeChange="0.1" TickFrequency="0.1" Height="22" Grid.Column="1" Grid.Row="5" />
                    <Slider x:Name="joint6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Maximum="0" Minimum="-30" ValueChanged="joint_ValueChanged" Height="22" TickFrequency="0.1" Grid.Column="1" Grid.Row="6"/>
